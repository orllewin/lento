<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewmodel" type="orllewin.tirwedd.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/eigenlicht"
        android:keepScreenOn="true"
        tools:context=".MainActivity">

        <androidx.camera.view.PreviewView
            android:id="@+id/camerax_view_finder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:scaleX="1.33"
            app:scaleType="fitCenter" />

        <orllewin.tirwedd.views.ShutterView
            android:id="@+id/shutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/preview_image_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/preview_image"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    tools:layout_height="100dp" />

                <ProgressBar
                    android:id="@+id/preview_progress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:indeterminateTint="@color/white"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/camera_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/camera_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/camera_outer" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/camera_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/camera_inner"
                android:onClick="@{() -> viewmodel.capturePhoto()}"/>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/overflow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/menu"
            android:src="@drawable/vector_overflow"
            android:tint="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <RelativeLayout
            android:id="@+id/flash_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/zoom_container"
            android:layout_marginStart="@dimen/control_left_padding"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:id="@+id/flash_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/flash_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/vector_flash_on"
                    android:tint="@color/white" />

            </RelativeLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/flash_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/flash_layout"
                android:visibility="gone"
                app:checkedChip="@+id/chip_flash_off"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_flash_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Flash off" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_flash_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Flash on" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_flash_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Flash Auto" />
            </com.google.android.material.chip.ChipGroup>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zoom_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_container_height"
            android:layout_above="@+id/aspect_ratio_container"
            android:layout_marginStart="@dimen/control_left_padding"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:id="@+id/zoom_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/zoom_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/vector_zoom_in"
                    android:tint="@color/white" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/zoom_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/zoom_layout"
                android:paddingStart="8dp"
                android:text="1x"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aspect_ratio_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_container_height"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/control_left_padding"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:id="@+id/aspect_ratio_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aspect_ratio_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/vector_aspect_ratio"
                    android:tint="@color/white" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/aspect_ratio_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/aspect_ratio_layout"
                android:paddingStart="8dp"
                android:text="16:9"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
</layout>