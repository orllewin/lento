<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="orllewin.lento.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/eigenlicht"
        android:keepScreenOn="true"
        tools:context=".MainActivity">

        <androidx.camera.view.PreviewView
            android:id="@+id/camerax_view_finder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:scaleX="1.33"
            app:scaleType="fitCenter" />

        <orllewin.lento.views.ShutterView
            android:id="@+id/shutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/preview_image_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/preview_image"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    tools:layout_height="100dp" />

                <ProgressBar
                    android:id="@+id/preview_progress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="60dp"
            android:layout_toLeftOf="@id/overflow_container"
            android:checked="true"
            android:paddingTop="20dp"
            android:text="Anamorphic"
            android:textColor="#ffffff"
            app:thumbTint="@color/white"
            app:trackTint="@color/white" />


        <RelativeLayout
            android:id="@+id/camera_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/camera_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/camera_outer" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/camera_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="@{() -> viewmodel.capturePhoto()}"
                android:src="@drawable/camera_inner" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/timer_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/vector_timer"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/overflow_container"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/overflow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu"
                android:src="@drawable/vector_overflow"
                android:tint="@color/white" />


        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/control_left_padding"
            android:layout_marginBottom="12dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:padding="12dp">

            <RelativeLayout
                android:id="@+id/border_container"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_container_height"
                android:layout_above="@+id/film_container">

                <RelativeLayout
                    android:id="@+id/border_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/border_inner"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/vector_border_none" />

                </RelativeLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/border_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/border_layout"
                    android:visibility="gone"
                    app:checkedChip="@+id/chip_flash_off"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/border_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="None" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/border_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="White" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/border_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Black" />
                </com.google.android.material.chip.ChipGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/film_container"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_container_height">

                <RelativeLayout
                    android:id="@+id/film_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/film_inner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="12dp"
                        android:src="@drawable/ic_vector_film_icon"
                        android:tint="@color/white" />

                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selected_film_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="11sp"
                    android:layout_toEndOf="@+id/film_layout"
                    android:textColor="@color/white"
                    tools:text="Kodak Kodacolour 64" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/flash_container"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_container_height">

                <RelativeLayout
                    android:id="@+id/flash_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/flash_inner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/vector_flash_off"
                        android:tint="@color/white" />

                </RelativeLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/flash_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/flash_layout"
                    android:visibility="gone"
                    app:checkedChip="@+id/chip_flash_off"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_flash_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Flash off" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_flash_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Flash on" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_flash_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Flash Auto" />
                </com.google.android.material.chip.ChipGroup>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/zoom_container"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_container_height">

                <RelativeLayout
                    android:id="@+id/zoom_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/zoom_inner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/vector_zoom_in"
                        android:tint="@color/white" />

                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/zoom_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zoom_layout"
                    android:paddingStart="8dp"
                    android:text="1x"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/aspect_ratio_container"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_container_height">

                <RelativeLayout
                    android:id="@+id/aspect_ratio_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aspect_ratio_inner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/vector_aspect_ratio"
                        android:tint="@color/white" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/aspect_ratio_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/aspect_ratio_layout"
                    android:paddingStart="8dp"
                    android:text="16:9"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Level -->
        <orllewin.skiss.SkissView
            android:id="@+id/level_skiss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hud_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="16dp"
            android:paddingBottom="64dp"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </RelativeLayout>
</layout>