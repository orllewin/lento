<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme_Lento" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/eigenlicht</item>
        <item name="colorPrimaryVariant">@color/eigenlicht</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/lens_red</item>
        <item name="colorSecondaryVariant">@color/lens_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowSplashScreenBackground">#1d1d1d</item>
    </style>

    <style name="Theme.Settings" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/eigenlicht</item>
        <item name="colorPrimaryVariant">@color/eigenlicht</item>
        <item name="colorOnPrimary">@color/lens_red</item>
        <item name="colorSecondary">@color/lens_red</item>
        <item name="colorSecondaryVariant">@color/lens_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

</resources>